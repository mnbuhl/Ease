{
  "$schema": "https://json.schemastore.org/template",
  "author": "Mikkel Buhl",
  "identity": "Ease.Templates",
  "name": "Ease Web App",
  "description": "A template for creating web apps with 'Ease' using MVC and Inertia with React or Vue",
  "classifications": [
    "Web",
    "Inertia",
    "MVC",
    "React",
    "Vue"
  ],
  "shortName": "ease",
  "sourceName": "Ease",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "client": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "React",
          "description": "React frontend"
        },
        {
          "choice": "Vue",
          "description": "Vue frontend"
        },
        {
          "choice": "Headless",
          "description": "Configure your own Inertia based frontend"
        }
      ],
      "defaultValue": "React"
    },
    "UseReact": {
      "type": "computed",
      "value": "(client == \"React\")"
    },
    "UseVue": {
      "type": "computed",
      "value": "(client == \"Vue\")"
    },
    "UseHeadless": {
      "type": "computed",
      "value": "(client == \"Headless\")"
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        ".git/**",
        ".vs/**",
        ".vscode/**",
        ".idea/**",
        ".template.config/**",
        ".scripts/**",
        "LICENSE",
        "src/obj/**",
        "src/bin/**",
        "src/wwwroot/dist/**",
        "src/app.db",
        "src/app.db-shm",
        "src/app.db-wal",
      ],
      "modifiers": [
        {
          "condition": "(UseReact)",
          "exclude": [
            "src/client-vue/**",
            "src/client-react/node_modules/**",
            "src/client-react/package-lock.json",
            "src/client-react/.vite/**"
          ],
          "rename": {
            "client-react": "client"
          }
        },
        {
          "condition": "(UseVue)",
          "exclude": [
            "src/client-react/**",
            "src/client-vue/node_modules/**",
            "src/client-vue/package-lock.json",
            "src/client-vue/.vite/**"
          ],
          "rename": {
            "client-vue": "client"
          }
        },
        {
          "condition": "(UseHeadless)",
          "exclude": [
            "src/client-react/**",
            "src/client-vue/**"
          ]
        }
      ]
    }
  ]
}