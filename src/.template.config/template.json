{
  "$schema": "https://json.schemastore.org/template",
  "author": "Mikkel Buhl",
  "identity": "Ease.Templates",
  "name": "Ease Web App",
  "description": "A template for creating web apps with 'Ease' using MVC and Inertia with React or Vue",
  "classifications": [
    "Web",
    "Inertia",
    "MVC",
    "React",
    "Vue"
  ],
  "shortName": "ease",
  "sourceName": "Ease.Templates",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "client": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "React",
          "description": "React frontend"
        },
        {
          "choice": "Vue",
          "description": "Vue frontend"
        },
        {
          "choice": "Headless",
          "description": "Configure your own Inertia based frontend"
        }
      ],
      "defaultValue": "React"
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "bin/**",
        "obj/**",
        ".git/**",
        ".vscode/**",
        ".template.config/**",
        "Migrations/**",
        "client-react/**",
        "client-vue/**",
        "db-*",
        "*.db",
        "**/.vite/**",
        "**/dist/**",
        "**/node_modules/**"
      ],
      "modifiers": [
        {
          "condition": "(client == \"React\")",
          "include": [
            "client-react/**"
          ]
        },
        {
          "condition": "(client == \"Vue\")",
          "include": [
            "client-vue/**"
          ]
        }
      ]
    }
  ]
}