{
  "$schema": "https://json.schemastore.org/template",
  "author": "Mikkel Buhl",
  "identity": "Ease.Template",
  "name": "Ease Web App",
  "description": "A template for creating web apps with 'Ease' using MVC and Inertia with React or Vue",
  "classifications": [
    "Web",
    "Inertia",
    "MVC",
    "React",
    "Vue"
  ],
  "shortName": "ease",
  "sourceName": "Ease.Template",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "include": [
        "**/*"
      ],
      "exclude": [
        "[Bb]in/**",
        "[Oo]bj/**",
        ".template.config",
        ".idea/**",
        ".vs/**",
        ".vscode/**",
        "*.db",
        "**/*.lock.json",
        "**/node_modules/**",
        "**/.vite/**"
      ]
    },
    {
      "modifiers": [
        {
          "condition": "(client == 'Headless')",
          "exclude": [
            "client-react/**",
            "client-vue/**"
          ]
        }
      ]
    },
    {
      "modifiers": [
        {
          "condition": "(client == 'React')",
          "exclude": [
            "client-vue/**"
          ]
        }
      ]
    },
    {
      "modifiers": [
        {
          "condition": "(client == 'Vue')",
          "exclude": [
            "client-react/**"
          ]
        }
      ]
    }
  ],
  "symbols": {
    "client": {
      "type": "parameter",
      "dataType": "choice",
      "choices": [
        {
          "choice": "Vue",
          "description": "Vue frontend"
        },
        {
          "choice": "React",
          "description": "React frontend"
        },
        {
          "choice": "Headless",
          "description": "Configure your own frontend"
        }
      ],
      "defaultValue": "React",
      "description": "Choose the type of frontend for your project."
    }
  }
}